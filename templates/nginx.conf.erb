# Mostly stock, managed by Puppet, beware.
#

user <%= user %>;
worker_processes <%= threadcount %>;
pid /var/run/nginx.pid;

events {
  worker_connections 1024;
}

http {

  ##
  # Basic Settings
  ##

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  keepalive_timeout 65;
  types_hash_max_size 2048;

  server_names_hash_bucket_size <%= server_names_hash_bucket_size %>;

  include <%= etcdir %>/mime.types;
  default_type application/octet-stream;

  ##
  # Logging Settings
  ##

  include <%= @etcdir %>/log_formats/*.conf;

  access_log /var/log/nginx/access.log <%= @default_log_format %>;
  error_log /var/log/nginx/error.log;

  ##
  # Hide the nginx version number from the Server heading
  ##
  server_tokens off;

  ##
  # Custom headers added as parameters
  ##
  <% if @add_header -%>
  <% @add_header.each do |k,v| %>
  add_header <%= k %> <%= v %>;
  <% end end -%>

  ##
  # Gzip Settings
  ##
  gzip on;
  gzip_disable "msie6";

  ##
  # lua shared dict
  ##
  <% if @lua_shared_dict -%>
  <% @lua_shared_dict.each do |k,v| %>
  lua_shared_dict <%= k %> <%= v %>;
  <% end end -%>


  ##
  # Virtual Host Configs
  ##
  include <%= etcdir %>/conf.d/*.conf;
  include <%= etcdir %>/sites-enabled/*;
}
